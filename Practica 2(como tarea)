/* Escribe un programa que lea de la entrada estandar el precio de un producto
y muestre en la salida estandar el precio del producto al aplicarle el IVA*/

#include<iostream>

using namespace std;

int main(){
	
	int n1, operacion = 0;
	float IVA = 0.16, Total = 0;
	
	cout<<"Digite el precio del producto: "; cin>>n1;
		
	operacion = n1 * IVA;
	Total = n1 + operacion;

	cout<<"\nIVA: "<<operacion<<endl;
	cout<<"\nTotal: "<<Total<<endl;

	
	return 0;
}
